#version 400 core

layout( location=0) in vec3 vertex_position;

out vec4 outColour;

uniform mat4 projectMatrix;
uniform mat4 viewMatrix;

void main(void){
	
	gl_Position =projectMatrix*viewMatrix*vec4(vertex_position, 1.0);
	//gl_Position = vec4(vertex_position.xy, vertex_position.z-0.5f, 1.0);
	outColour = vec4(vertex_position, 1.0);
}